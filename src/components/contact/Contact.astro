<section
  class="container mx-auto mt-32 px-4 lg:px-28"
  aria-label="Our Projects"
  id="contact"
>
  <h2 class="uppercase text-xl">contact us</h2>
  <div class="w-full h-[1px] bg-dark mb-10 mt-5"></div>
  <div
    class="flex justify-around items-center mt-20 flex-col gap-8 2xl:gap-0 2xl:flex-row"
  >
    <h3
      class="text-black uppercase flex flex-col items-center text-4xl sm:text-5xl xl:text-7xl 2xl:gap-0 2xl:w-1/2 2xl:items-end"
    >
      <span>Have some</span>
      <span>questions left?</span>
    </h3>
    <p class="max-w-md text-lg text-center 2xl:text-left 2xl:w-1/2">
      Fill in the form and our manager will contact you as soon as possible to
      discuss your projects
    </p>
  </div>
  <form class="flex flex-col gap-8 mt-16 items-center sm:items-start">
    <div class="grid grid-cols-2 grid-rows-3 gap-6 w-full 2xl:w-1/2">
      <div class="col-span-2 flex flex-col gap-2">
        <label class="font-light text-sm" for="name">Full Name</label>
        <input id="name" type="text" class="px-4 py-2 w-full bg-[#FAFAFA]" />
      </div>
      <div class="flex flex-col gap-2">
        <label class="font-light text-sm" for="email">E-Mail</label>
        <input id="email" type="email" class="px-4 py-2 w-full bg-[#FAFAFA]" />
      </div>
      <div class="">
        <label class="font-light text-sm" for="email">Phone Number</label>
        <input id="phone" type="tel" class="px-4 py-2 w-full bg-[#FAFAFA]" />
      </div>
      <div class="col-span-2">
        <label class="font-light text-sm" for="message">Message</label>
        <input id="message" type="text" class="px-4 py-2 w-full bg-[#FAFAFA]" />
      </div>
    </div>
    <button
      class="px-16 py-3 bg-dark font-bold text-lg text-[#F2F2F2]"
      type="submit">Contact Us</button
    >
  </form>
</section>
